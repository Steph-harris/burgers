<div class="col-md-4">
  <h2>Uneaten Burgers</h2>
  {{#each burgers_data}}
    {{#unless this.devoured}}
      <h3>{{this.burger_name}}</h3>
      <div>
        <form method="POST" action="/delete?_method=DELETE">
          <input input type="hidden" type="text" name="member_id" value={{this.id}}><br>
          <button type="submit" class="btn btn-default">Eat Burger</button>
        </form>
      </div>
    {{/unless}}
  {{/each}}
</div>
<div class="col-md-4">
  <h2>Eaten Burgers</h2>
    {{#each burgers_data}}
      {{#if this.devoured}}
        <h3>{{this.burger_name}}</h3>
        <div>
          <form method="POST" action="/create">
            <input input type="hidden" type="text" name="burger_name" value={{this.id}}><br>
            <button type="submit" class="btn btn-info">Re-Add Burger to Que</button>
          </form>
        </div>
      {{/if}}  
    {{/each}}
</div>

